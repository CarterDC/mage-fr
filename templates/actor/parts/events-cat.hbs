<section class="category events" data-category="events">
    {{!-- EVENTS --}}
    {{> "systems/mage-fr/templates/actor/parts/cat-banner.hbs" category="events" lock = locks.events addButton = true}}
    <div class="grid one-col">
        {{#each items.events as |event key|}}
        <div class="trait event ctx" data-item-id="{{event._id}}">
            <img class="trait-img" src="{{event.img}}"/>
            <div class="vertical-wrapper">
                <div class="horizontal-wrapper">
                    <label class="trait-label" data-item-id="{{event._id}}">
                        {{event.name}}
                    </label>
                    <div class="ligne"></div>
                    <div class="edit-bar" data-locked="{{../locks.events}}">
                        <a class="mini-button" data-action="edit"><i class="fas fa-pencil-alt"></i></a>
                        <a class="mini-button" data-action="remove"><i class="fas fa-trash"></i></a>
                    </div>
                    <div class="bullet-display" data-locked="{{../locks.events}}">
                        {{event.data.date}}
                    </div>
                </div>
                <div class="one-liner-desc" data-expanded="false">
                  <a class="mini-button" data-action="expand">
                    <i class="fas fa-ellipsis-h"></i>
                  </a>
                  {{{event.data.displayDescription}}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>