<section class="category xp" data-category="xp">
    {{!-- EVENTS --}}
    {{> "systems/mage-fr/templates/actor/parts/cat-banner.hbs" category="xp" lock = locks.xp addButton = false}}
    <div class="flexrow">
      <div class="flexcol">
        <div class= "field currXP" title="{{localize 'M20E.hints.currentXP'}}">
            <label for="data.currentXP">{{localize "M20E.labels.currentXP"}} : </label>
            <input name="data.currentXP" disabled type="text" value="{{data.currentXP}}" data-dtype="Number"/>
        </div>
        <div class= "field" title="{{localize 'M20E.hints.totalXP'}}">
            <label for="data.totalXP">{{localize "M20E.labels.totalXP"}} : </label>
            <input name="data.totalXP" disabled type="text" value="{{data.totalXP}}" data-dtype="Number"/>
        </div>
      </div>
      <div class="flexcol" style="flex: 1 1 50%;">
          <div class= "field" title="{{localize 'M20E.hints.studyPoints'}}">
              <label for="data.studyPoints">{{localize "M20E.labels.studyPoints"}} : </label>
<textarea name="data.studyPoints" {{#if locks.xp}}readonly{{/if}}>{{data.studyPoints}}</textarea>
        </div>
       </div>
    </div>
</section>