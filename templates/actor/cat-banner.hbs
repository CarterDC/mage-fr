    <div class="category-banner">
        <div class="mini-button decoy" data-action="lock" data-hidden="{{lock}}"></div>
        {{#if addButton}}
            <a class="mini-button decoy" data-hidden="{{lock}}" data-locked="{{lock}}"></a>
        {{/if}}
        <label>{{localize (concat "M20E.categories." category)}}</label>
        {{#if addButton}}
        <a class="mini-button" data-action="add" data-hidden="{{lock}}" data-locked="{{lock}}"><i class="fas fa-plus"></i></a>
        {{/if}}
        <a class="mini-button" data-action="lock" data-category="{{category}}" data-hidden="{{lock}}">
            {{#if lock}}<i class="fas fa-lock"></i>
            {{else}}<i class="fas fa-unlock-alt"></i>{{/if}}
        </a>
    </div>