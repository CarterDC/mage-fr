<section class="m20e card">
    <header class="card-header">
    </header>
    <header class="card-tooltip">
      {{#if item.data.data.displayName}}
        {{#if (ne item.data.data.displayName item.name)}}
        <div class="tooltip-part item-name">
          {{{item.name}}}
        </div>
        {{/if}}
      {{/if}}
      {{#if item.data.data.displayDescription}}
      <div class="tooltip-part item-ddesc">
        {{{item.data.data.displayDescription}}}
      </div>
      {{/if}}
      {{#if item.data.data.systemDescription}}
      <div class="tooltip-part">
        {{{item.data.data.systemDescription}}}
      </div>
      {{/if}}
    </header>
    {{#if (eq item.type 'rote')}}
    <div class="card-buttons">
      <button class="throw" data-action="throw-rote" data-item-id="{{item.id}}" data-actor-id="{{item.actor.id}}">
        <span>{{localize "M20E.labels.throw"}} <i class="fas fa-dice"></i></span>
      </button>
    </div>
    {{/if}}
    <header class="card-footer">
        {{#if item.data.data.subType}}
        <span class="item-type">{{localize (concat 'M20E.subType.' item.data.data.subType)}}</span>
        {{else}}
        <span class="item-type">{{localize (concat 'M20E.category.' category)}}</span>
        {{/if}}
        {{#if (in category ['background', 'meritsflaws', 'events'])}}
        <img class="item-img" src="{{item.img}}"/>
        {{/if}}
    </header>
</section>