<nav class="sheet-tabs tabs" data-group="primary">
    <a data-tab="detail"><label>{{localize "M20E.navtabs.detail"}}</label></a>
    {{#if secondTab}}
    <a data-tab="{{secondTab}}">
      <div class="mini-button decoy" data-action="lock" data-hidden="{{lookup locks secondTab}}"></div>
      <div class="mini-button decoy" data-hidden="{{lookup locks secondTab}}" data-locked="{{lookup locks secondTab}}"></div>
      <label>{{localize (concat "M20E.navtabs." secondTab)}}</label>
      <div class="mini-button" data-action="add" data-hidden="{{lookup locks secondTab}}" data-locked="{{lookup locks secondTab}}"><i class="fas fa-plus"></i></div>
      <div class="mini-button" data-action="lock" data-category="{{secondTab}}" data-hidden="{{lookup locks secondTab}}">
          {{#if (lookup locks secondTab)}}<i class="fas fa-lock"></i>
          {{else}}<i class="fas fa-unlock-alt"></i>{{/if}}
      </div>
    </a>
    {{else}}
    <a data-tab="description"><label>{{localize "M20E.navtabs.description"}}</label></a>
    {{/if}}
</nav>