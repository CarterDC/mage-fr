<header class="sheet-header">
    {{#if itemImg}} 
    <div class= "img-colunm">
      <img src="{{itemImg}}" data-edit="img" title="{{localize "M20E.hints.imgClick"}}" alt="{{item.data.name}} - Image"/>
    </div>
    {{/if}}
    <div class="header-column">
        <div class="header-row">
            {{#if useDisplayName}}
            <input class="name" name="data.displayName" type="text" value="{{data.displayName}}" data-dtype="String" placeholder="{{item.data.name}}" title="{{localize 'M20E.hints.displayName'}}"/>
            {{else}}
            <input class="name" name="name" type="text" value="{{item.data.name}}" data-dtype="String" title="{{localize 'M20E.hints.name'}}"/>
            {{/if}}
            <div class="item-type">{{{localize itemType}}}</div>
        </div>
    </div>
</header>