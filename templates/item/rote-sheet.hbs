<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/mage-fr/templates/item/parts/header-block.hbs" useDisplayName='false' itemImg=item.img itemType="ITEM.TypeRote"}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a data-tab="detail"><label>{{localize "M20E.navtabs.detail"}}</label></a>
        <a data-tab="effects">
          <div class="mini-button decoy" data-action="lock" data-hidden="{{locks.effects}}"></div>
          <div class="mini-button decoy" data-hidden="{{locks.effects}}" data-locked="{{locks.effects}}"></div>
          <label>{{localize "M20E.navtabs.effects"}}</label>
          <div class="mini-button" data-action="add" data-hidden="{{locks.effects}}" data-locked="{{locks.effects}}"><i class="fas fa-plus"></i></div>
          <div class="mini-button" data-action="lock" data-category="effects" data-hidden="{{locks.effects}}">
              {{#if locks.effects}}<i class="fas fa-lock"></i>
              {{else}}<i class="fas fa-unlock-alt"></i>{{/if}}
          </div>
        </a>
    </nav>
    <section class="sheet-body">
        <section class="tab" data-group="primary" data-tab="detail">
            <br> {{!-- todo replace br with css rule on item section tab margintop --}}
          <div class= "field" title="{{localize 'M20E.hints.displayDescription'}}">
              <label for="data.displayDescription">{{localize "M20E.labels.displayDescription"}} : </label>
<textarea name="data.displayDescription">{{data.displayDescription}}</textarea>
          </div>
        </section>
        <section class="tab" data-group="primary" data-tab="effects">
          <br>
          <div class="category grid one-col">
            <select class="listened-select" data-index="">
            {{#select effect}}
                {{#each availEffects as |sphere index|}}
                    <option value="{{sphere.key}}">{{sphere.name}}</option>
                {{/each}}
            {{/select}}
          </select>
          </div>
        </section>
    </section>
</form>
