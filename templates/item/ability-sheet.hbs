<form class="{{cssClass}}" autocomplete="off">
  {{> "systems/mage-fr/templates/item/parts/header-block.hbs" useDisplayName = 'true' itemImg = '' itemType = "ITEM.TypeAbility"}}

  {{> "systems/mage-fr/templates/item/parts/nav-block.hbs"}}

  <section class="sheet-body">
      <section class="tab" data-group="primary" data-tab="detail">
          <div class="grid two-col">
              <div class= "field">
                  <label for="data.subType">{{localize "M20E.labels.subType"}} : </label>
                  <select name="data.subType">
                      {{#select data.subType}}
                          {{#each config.abilitySubTypes as |value key|}}
                              <option value="{{key}}">{{localize value}}</option>
                          {{/each}}
                      {{/select}}
                  </select>
              </div>
              <div class= "field" title="{{localize 'M20E.hints.value0to5'}}">
                  <label for="data.value">{{localize "M20E.labels.value"}} : </label>
                  <input name="data.value" type="text" value="{{data.value}}" data-dtype="Number" min="0" max="5"/>
              </div>
              <div class= "field" title="{{localize 'M20E.hints.specialisation'}}">
                  <label for="data.specialisation">{{localize "M20E.labels.specialisation"}} : </label>
                  <input name="data.specialisation" type="text" value="{{data.specialisation}}" data-dtype="String"/>
              </div>
              <div class= "field" title="{{localize 'M20E.hints.extra'}}">
                  <label for="data.extra">{{localize "M20E.labels.extra"}} : </label>
                  <select name="data.extra">
                      {{#select data.extra}}
                          {{#each config.extraDecorations as |value key|}}
                              <option value="{{value}}">{{value}}</option>
                          {{/each}}
                      {{/select}}
                  </select>
              </div>
              {{#if isGM}}
              <div class= "field" title="{{localize 'M20E.hints.systemName'}}">
                  <label for="item.name">{{localize "M20E.labels.systemName"}} : </label>
                  <input name="item.name" type="text" value="{{item.name}}" data-dtype="String" />
              </div>
              {{/if}}
          </div>
          <div class= "field" title="{{localize 'M20E.hints.displayDescription'}}">
              <label for="data.displayDescription">{{localize "M20E.labels.displayDescription"}} : </label>
<textarea name="data.displayDescription">{{data.displayDescription}}</textarea>
          </div>
      </section>
      {{> "systems/mage-fr/templates/item/parts/description-block.hbs" isDescEditable = isGM}}
  </section>
</form>