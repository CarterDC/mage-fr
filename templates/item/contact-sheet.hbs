<form class="{{cssClass}}" autocomplete="off" spellcheck="false">
  {{> "systems/mage-fr/templates/item/parts/header-block.hbs" useDisplayName=true itemImg='' itemType="ITEM.TypeContact"}}

  {{> "systems/mage-fr/templates/item/parts/nav-block.hbs" secondTab='picture' lock = null}}

  <section class="sheet-body">
      <section class="tab" data-group="primary" data-tab="detail">
          <div class="grid two-col">
              <div class= "field" title="{{localize 'M20E.hints.value0to5'}}">
                  <label>{{localize "M20E.labels.value"}} : </label>
                  <input name="data.value" type="text" value="{{data.value}}" data-dtype="Number" min="0" max="10"/>
              </div>
              <div class= "field" title="{{localize 'M20E.hints.faction'}}">
                  <label>{{localize "M20E.labels.faction"}} : </label>
                  <input name="data.faction.displayValue" type="text" value="{{data.faction.displayValue}}" data-dtype="String"/>
              </div>
              {{#if isGM}}
              <div class= "field" title="{{localize 'M20E.hints.systemName'}}">
                  <label>{{localize "M20E.labels.systemName"}} : </label>
                  <input name="name" type="text" value="{{item.data.name}}" data-dtype="String" />
              </div>
              {{/if}}
          </div>
          <div class= "field" title="{{localize 'M20E.hints.displayDescription'}}">
              <label>{{localize "M20E.labels.displayDescription"}} : </label>
<textarea name="data.displayDescription">{{data.displayDescription}}</textarea>
          </div>
      </section>
      <section class="tab" data-group="primary" data-tab="picture">
          <div class= "field">
              <label>{{localize "M20E.labels.picture"}} : </label>
              <img class="sheetLogo" src="{{item.img}}" data-edit="img"/>
          </div>
      </section>
      
  </section>
</form>