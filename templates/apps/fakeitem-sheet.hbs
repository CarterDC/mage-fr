<form class="{{cssClass}}" autocomplete="off" spellcheck="false">
  <header class="sheet-header">
    <div class="header-column">
        <div class="header-row">
            <input class = "name" name="lexiconName" type="text" value="{{lexiconName}}" data-dtype="String" placeholder="{{placeholderName}}" title="{{localize 'M20E.hints.displayName'}}"/>
            <span class="item-type">{{type}}</span>
        </div>
    </div>
  </header>

  {{> "systems/mage-fr/templates/item/parts/nav-block.hbs"}}

    <section class="sheet-body">
        <section class="tab" data-group="primary" data-tab="detail">
            <div class="grid two-col">
                 <div class= "field" title="{{localize 'M20E.hints.value0to5'}}">
                    <label>{{localize "M20E.labels.value"}} : </label>
                    <input name="data.{{category}}.{{key}}.value" type="text" value="{{value}}" data-dtype="Number" min="0" max="10"/>
                </div>
                {{#if (eq key 'resonance')}} 
                <div class= "field">
                    <label>{{localize "M20E.labels.signature"}} : </label>
                    <input name="data.{{category}}.{{key}}.signature" type="text" value="{{signature}}" data-dtype="String"/>
                </div>
                <div class= "field">
                  <label>{{localize "M20E.labels.resonanceFlavor"}} : </label>
                  <select name="data.{{category}}.{{key}}.resonanceFlavor">
                      {{selectOptions config.resonanceFlavors selected=resonanceFlavor localize=true}}
                  </select>
                </div>
                <div class= "field">
                  <label>{{localize "M20E.labels.synergyFlavor"}} : </label>
                  <select name="data.{{category}}.{{key}}.synergyFlavor">
                      {{selectOptions config.synergyFlavors selected=synergyFlavor localize=true}}
                  </select>
                </div>
                {{else}}
                <div class= "field" title="{{localize 'M20E.hints.specialisation'}}">
                    <label>{{localize "M20E.labels.specialisation"}} : </label>
                    <input name="data.{{category}}.{{key}}.specialisation" type="text" value="{{specialisation}}" data-dtype="String"/>
                </div>
                {{/if}}
                {{#if isGM}}
                <div class= "field" title="{{localize 'M20E.hints.nonEditable'}}">
                    <label>{{localize "M20E.labels.systemName"}} : </label>
                    <input type="text" value="{{localize (m20e-concat "M20E." category "." key)}}" data-dtype="String" disabled/>
                </div>
                {{/if}}
            </div>
            <div class= "field" title="{{localize 'M20E.hints.displayDescription'}}">
                <label>{{localize "M20E.labels.displayDescription"}} : </label>
<textarea name="data.{{category}}.{{key}}.displayDescription">{{{displayDescription}}}</textarea>
            </div>
        </section>
        <section class="tab" data-group="primary" data-tab="description">
            <div class= "field" title="{{localize 'M20E.hints.compendiumEdit'}}">
                <label>{{localize "M20E.labels.systemDescription"}} : </label>
                {{editor content=systemDescription target='dummy' button=true owner=owner editable= true}}
                {{!--<div class="fake-editor">{{{systemDescription}}}</div>--}}
            </div>
        </section>
    </section>
</form>